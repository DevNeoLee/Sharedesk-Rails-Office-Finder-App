<%= form_with model: [@room, @room.reviews.new], local: true do |f|%>

    <div id="stars"></div>
    <%= f.text_field :comment %>
    <%= f.hidden_field :room_id, value: @room.id %>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>

<script>
    $('#stars').raty({
        scoreName: 'review[star]',
        number: 5,
        score: 1,
        starOff: '<%= image_path('star-off.png') %>',
        starOn : '<%= image_path('star-on.png') %>',
    });
</script>