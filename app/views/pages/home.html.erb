<%# mid-search form %>
<div class="container-fluid mb-4 border p-4 shadow sticky-top bg-light">
    <%= search_form_for @search, url: search_path, method: :get do |f| %>
        <div class="row">
            <div class="col-md-6">
                <%= f.search_field :address_cont, placeholder: "where are you going?", class: "form-control input-lg"%>
            </div>
            <div class="col-md-2">
                <%= f.submit "Check Availability", class: "btn btn-primary"%>
            </div>
            <div class="col-md-2">
                <%= text_field_tag :start_date, "start date", class:"form-control", id: "start_date"%>
            </div>
            <div class="col-md-2">
                <%= text_field_tag :end_date, "end date", class:"form-control", id: "end_date"%>
            </div>
        </div>
    <% end %>
</div>

<div class="jumbotron shadow col-md-12">
    <div class="text-center mb-5 h3">
        <h3>Top Space Pick by Reviews </h3>
    </div>
    <div class="row">    
        <% @rooms.each do |room|%>
            <div class="col-md-4">
                <%= link_to room_path(room.id) do %>
                    <div class="card mb-2 shadow m-2">
                        <div class="card-header card_header text-center">
                            <%= room.listing_name %>
                        </div>
                        <% if room.images.attached? %>
                            <%= image_tag room.medium_image(room.images[0]), class: "img-fluid"%>
                        <% end %>
                        <div class="card-body card_body">
                            <div class="card-text">
                                <%= room.address %>
                            </div>                     
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %> 
    </div>
</div>

<%# customer reviews %>
<div class="jumbotron shadow">
    <div class="text-center">
        <h2>Customer Reviews</h2>
    </div>
    <div class="col-md-12"> 
        <%= render "reviews/list" %>
