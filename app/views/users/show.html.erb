<div class="row">
    <div class="col-md-3">
        <div class="center">
            <%= image_tag @user.default_avatar, class: "avatar-largest" %></div>
        <div class="card card-body">
            <div class="card-header">Verification</div>
            <div class="card-body">
                Email Address<br>
                Phone Number
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="center">
            <%= @user.name %>
        </div>
        <div class="description row-space-6">
            <%= @user.description %>
        </div>

        <h4>Your Listings(<%= @rooms.length %>) </h4>

        <div class="row">
            <% @rooms.each do |room| %>
                <div class="col-md-4">
                    <div class="card card-body">
                        <div class="card-header preview">
                            <%= image_tag room.images[0] if room.images.attached? %>
                        </div>
                        <div class="card-header preview">
                            <%= room.listing_name %>
                        </div>
                        <div class="card-header preview">
                            <%= room.address %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>



