<div class="row">
    <div class="col-md-3">
        <div class="center">
            <%= image_tag @user.default_avatar, class: "avatar-largest" %></div>
        <div class="panel panel-default">
            <div class="panel-heading">Verification</div>
            <div class="panel-body">
                Email Address<br>
                Phone Number
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="center">
            <%= @user.name %>
        </div>
        <div class="description row-space-6">
            <%= @user.description %>
        </div>
    </div>
</div>



