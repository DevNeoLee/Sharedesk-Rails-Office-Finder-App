
<div class="row">
    <div class="col-md-3">
        <ul class="sidebar-list">
            <li class="sidebar-item"><%= link_to "Your Listing", rooms_path, class: "sidebar-link"%></li>
            <li class="sidebar-item"><%= link_to "Yourlisting Reservations", yourlisting_reservations_path, class: "sidebar-link active"%></li>
            <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link"%></li>
        </ul>
    </div>
</div>
<div class="col-md-9">
    <div class="panel panel-default">
        <div class="panel-heading">
            Your Listing Reservations
        </div>
        <div class="panel-body">
            <% @rooms.each do |room| %>
                <% room.reservations.each do |reservation| %>
                    <div class="row">
                        <div class="col-md-2">
                            <%= reservation.start_date.strftime('%v')%>
                        </div>
                        <div class="col-md-6">
                            <%= link_to room_path(reservation.room) do %>
                                <%= image_tag reservation.room.images[0] %>
                            <% end %>
                        </div>
                        <div class="col-md-2">
                            <%= link_to user_path(reservation.user) do %>
                                <%= image_tag reservation.user.default_avatar, class: "img-circle avatar-large"%>
                            <% end %>
                        </div>
                        <div class="col-md-2 right">
                            <h4>$<%= reservation.total %></h4>
                        </div>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div> 
</div>