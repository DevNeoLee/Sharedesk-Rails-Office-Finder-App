
<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            <li class="list-group-item"><%= link_to "Your Listing", rooms_path, class: "list-group-link"%></li>
            <li class="list-group-item"><%= link_to "Yourlisting Reservations", yourlisting_reservations_path, class: "list-group-link "%></li>
            <li class="list-group-item"><%= link_to "Your Trips", your_trips_path, class: "list-group-link active"%></li>
        </ul>
    </div>
    <div class="col-md-9">
        <div class="card card-body">
            <div class="card-header">
                Your Trips
            </div>
            <div class="card">
            
                <% @trips.each do |trip| %>
                <div class="card">
                
                </div>
                    <div class="row pb-3">
                        <div class="col-md-2">
                            <%= trip.start_date.strftime('%v')%>
                        </div>
                        <div class="col-md-6">
                            <%= link_to room_path(trip.room) do %>
                                <%= image_tag trip.room.images[0], class: "" %>
                            <% end %>
                        </div>
                        <div class="col-md-2">
                            <%= link_to user_path(trip.room.user) do %>
                                <%= image_tag current_user.default_avatar, class: "img-circle avatar-large"%>
                            <% end %>
                        </div>
                        <div class="col-md-2 right">
                            <h4>$<%= trip.total %></h4>
                        </div>
                    </div>
                <% end %>
            </div>
        </div> 
    </div>
</div>
   