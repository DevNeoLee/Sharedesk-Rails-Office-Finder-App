<div class="col-md-12 min_height_mid" >
    <div class="row">
            <% @trips.each do |trip| %>
            <div class="col-md-3 mb-2">
                <%= link_to room_path(trip.room) do %>
                <div class="card mb-2">
                    <div class="card-header">
                            <%= trip.start_date.strftime('%v')%>                
                    </div>
                    <% if trip.room.images.attached? %>
                        <%= image_tag trip.room.medium_image(trip.room.images[0]), class: "img-fluid" %>
                    <% end %>
                    <div class="card-body">
                        <div class="card-title">                            
                            <%= image_tag trip.room.user.default_avatar, class: "img-circle avatar-large"%>
                        </div>
                        <h4>$<%= trip.total %></h4>
                    </div>
                </div>
                <% end%>
            </div>
        <% end %>
    </div>
</div>

 
               
   