
<div class="col-md-4">
<%=link_to room_path(room.id) do %>
    <div class="card mb-2 shadow d-flex text-center">
        <div class="card-header d-flex text-center">
            <div class="h4"><%= room.listing_name %></div> <div class="ml-5 m-0 p-0" id="average_rate_<%= room.id %>"></div>
        </div>
        <% if room.images.attached? %>
            <%= image_tag room.medium_image(room.images[0]), class: "img-fluid"%>
        <% end %>
        <div class="card-body">
            <div class="card-text">
                <%= room.address %>
            </div>
        </div>
    </div>


<script>
$(function(){
    $('#average_rate_<%= room.id %>').raty({
        readOnly: true,
        number: 5,
        score: <%= room.average_rating %>,
        path: '/assets/',
    })

});
</script>

<% end %>
</div>